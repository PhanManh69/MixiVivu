<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MixiVivu" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>

    <style name="Theme.MixiVivu" parent="Base.Theme.MixiVivu" >
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="buttonBarItem_LinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="buttonBarItem_ImageView">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:tint">@color/darkBlue</item>
    </style>

    <style name="buttonBarItem_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="buttonBarItem_View">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/bg_dark_blue</item>
    </style>

</resources>