<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.MixiVivu" parent="Theme.MaterialComponents.DayNight.NoActionBar">

    </style>

    <style name="Theme.MixiVivu" parent="Base.Theme.MixiVivu" >
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="buttonBarItem_LinearLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="buttonBarItem_ImageView">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:gravity">center</item>
        <item name="android:tint">@color/darkBlue</item>
    </style>

    <style name="buttonBarItem_TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="buttonBarItem_View">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/bg_dark_blue1</item>
    </style>

    <style name="textViewTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="textViewContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="textViewContentIntro">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="textViewContentBold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="buttonWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_button_selector1</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="buttonLightBlue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_button_selector2</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="buttonWhite2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/bg_button_list2</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkBlue</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_white1</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="editTextLightBlue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_white_input1</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="autoCompleteTextViewLightBlue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_white_input1</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">16dp</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="shapeableImageViewIntro">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">224dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:importantForAccessibility">no</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="DetailRoom" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="DialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/DetailRoom</item>
    </style>

    <style name="textContentBlog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="picContentBlog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">224dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:importantForAccessibility">no</item>
    </style>

</resources>