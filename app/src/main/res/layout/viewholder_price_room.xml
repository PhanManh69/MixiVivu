<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_light_blue3">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/picUrl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize8Percent" />

    <TextView
        style="@style/textViewTitle"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@+id/picUrl"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        app:srcCompat="@drawable/bed"
        app:tint="@color/darkBlue"
        app:layout_constraintStart_toEndOf="@+id/picUrl"
        app:layout_constraintTop_toBottomOf="@+id/title"
        tools:ignore="ContentDescription" />

    <TextView
        style="@style/textViewContentBold"
        android:id="@+id/area"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="@+id/icon"
        app:layout_constraintBottom_toBottomOf="@+id/icon"/>

    <TextView
        style="@style/textViewContentBold"
        android:id="@+id/capacity"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/icon"
        app:layout_constraintStart_toEndOf="@+id/area"
        app:layout_constraintBottom_toBottomOf="@+id/icon"/>

    <ImageView
        android:id="@+id/people"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="4dp"
        app:srcCompat="@drawable/user"
        app:tint="@color/darkBlue"
        app:layout_constraintStart_toEndOf="@+id/capacity"
        app:layout_constraintTop_toTopOf="@+id/icon"
        tools:ignore="ContentDescription" />

    <TextView
        style="@style/textViewTitle"
        android:id="@+id/price"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/picUrl"
        app:layout_constraintBottom_toBottomOf="@id/layoutQuantity"/>

    <LinearLayout
        android:id="@+id/layoutQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:padding="4dp"
        android:background="@drawable/bg_dark_blue2"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonWhite"
            android:id="@+id/plus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="@string/plus" />

        <TextView
            style="@style/textViewTitle"
            android:id="@+id/quantity"
            android:layout_width="40dp"
            android:text="@string/zero"
            android:textAlignment="center"/>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonWhite"
            android:id="@+id/minus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:text="@string/minus"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>