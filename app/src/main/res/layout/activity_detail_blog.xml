                <com.google.android.material.imageview.ShapeableImageView
                    style="@style/picContentBlog"
                    android:id="@+id/picContent4"
                    android:visibility="gone"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize8Percent"/>

                <TextView
                    style="@style/textContentBlog"
                    android:id="@+id/content5"
                    android:visibility="gone"/>

                <com.google.android.material.imageview.ShapeableImageView
                    style="@style/picContentBlog"
                    android:id="@+id/picContent5"
                    android:visibility="gone"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize8Percent"/>

                <TextView
                    style="@style/textContentBlog"
                    android:id="@+id/content6"
                    android:visibility="gone"/>

                <com.google.android.material.imageview.ShapeableImageView
                    style="@style/picContentBlog"
                    android:id="@+id/picContent6"
                    android:visibility="gone"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize8Percent"/>

