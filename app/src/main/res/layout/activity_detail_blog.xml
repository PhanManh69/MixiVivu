<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DetailBlogActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="36dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">

            <TextView
                style="@style/textViewTitle"
                android:id="@+id/title"
                android:layout_marginTop="68dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                style="@style/textViewContent"
                android:id="@+id/date"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:background="@drawable/bg_white_input2"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/heading_border"
                app:layout_constraintTop_toBottomOf="@+id/date"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="ContentDescription" />

            <TextView
                style="@style/textViewContent"
                android:id="@+id/intro"
                android:layout_marginTop="16dp"
                android:textStyle="italic"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintStart_toStartOf="parent"/>

            <FrameLayout
                android:id="@+id/layoutPic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="1dp"
                android:background="@drawable/bg_white_pic_room"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/intro">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/picIntro"
                    android:layout_width="match_parent"
                    android:layout_height="224dp"
                    android:scaleType="centerCrop"
                    android:importantForAccessibility="no"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize15Percent"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/layoutPic"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    style="@style/textContentBlog"
                    android:id="@+id/content1"
                    android:visibility="gone"/>

                <com.google.android.material.imageview.ShapeableImageView
                    style="@style/picContentBlog"
                    android:id="@+id/picContent1"
                    android:visibility="gone"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize8Percent"/>

                <TextView
                    style="@style/textContentBlog"
                    android:id="@+id/content2"
                    android:visibility="gone"/>

                <com.google.android.material.imageview.ShapeableImageView
                    style="@style/picContentBlog"
                    android:id="@+id/picContent2"
                    android:visibility="gone"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize8Percent"/>

                <TextView
                    style="@style/textContentBlog"
                    android:id="@+id/content3"
                    android:visibility="gone"/>

                <com.google.android.material.imageview.ShapeableImageView
                    style="@style/picContentBlog"
                    android:id="@+id/picContent3"
                    android:visibility="gone"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize8Percent"/>

                <TextView
