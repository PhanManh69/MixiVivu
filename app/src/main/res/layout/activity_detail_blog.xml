                    style="@style/textContentBlog"
                    android:id="@+id/content12"
                    android:visibility="gone"/>

                <com.google.android.material.imageview.ShapeableImageView
                    style="@style/picContentBlog"
                    android:id="@+id/picContent12"
                    android:visibility="gone"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize8Percent"/>

                <TextView
                    style="@style/textContentBlog"
                    android:id="@+id/content13"
                    android:visibility="gone"/>

                <com.google.android.material.imageview.ShapeableImageView
                    style="@style/picContentBlog"
