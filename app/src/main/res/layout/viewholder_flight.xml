<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:padding="16dp"
    android:background="@drawable/bg_white_input4">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/picAirline"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:importantForAccessibility="no"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize15Percent"/>

    <TextView
        style="@style/textViewContent"
        android:id="@+id/nameAirline"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@+id/picAirline"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        style="@style/textViewContent"
        android:id="@+id/namePlane"
        android:layout_width="0dp"
        android:layout_marginStart="8dp"
        android:textAlignment="textStart"
        app:layout_constraintStart_toEndOf="@+id/picAirline"
        app:layout_constraintBottom_toBottomOf="@+id/picAirline"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        style="@style/textViewContent"
        android:id="@+id/airport"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@+id/picAirline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        style="@style/textViewContent"
        android:id="@+id/timeline"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@+id/airport"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        style="@style/textViewTitle"
        android:id="@+id/price"
        android:layout_width="0dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textStart"
        app:layout_constraintTop_toBottomOf="@+id/airport"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>